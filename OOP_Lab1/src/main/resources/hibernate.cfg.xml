<hibernate-configuration xmlns="http://www.hibernate.org/xsd/hibernate-configuration">
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/insurance_app</property>
        <property name="connection.username">${database.username}</property>
        <property name="connection.password">${database.password}</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="univ.lab.model.Insurance"/>
    </session-factory>
</hibernate-configuration>